# Configuration du serveur
PORT=3000
NODE_ENV=development

# Clés JWT
JWT_SECRET=changer_cette_clé_en_production
JWT_EXPIRATION=24h

# Base de données PostgreSQL
PGHOST=localhost
PGUSER=postgres
PGDATABASE=ehpad_connect
PGPASSWORD=postgres
PGPORT=5432

# Base de données MongoDB
MONGO_URI=mongodb://localhost:27017/ehpad_connect

# Service d'envoi d'emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@ehpadbelleviste.fr
SMTP_PASS=mot_de_passe_smtp
SMTP_FROM=EHPAD Belleviste <noreply@ehpadbelleviste.fr>

# Destinataire administrateur par défaut
ADMIN_EMAIL=mathieu.desobry@ehpadbelleviste.fr

# Configuration Octime Expresso
OCTIME_API_URL=https://api.octime.fr/
OCTIME_API_KEY=votre_clé_api
OCTIME_COMPANY_ID=id_de_votre_entreprise

# Service de signature électronique
SIGNATURE_SERVICE=yousign
SIGNATURE_API_KEY=votre_clé_api
SIGNATURE_API_URL=https://api.yousign.com/

# Stockage des fichiers
STORAGE_TYPE=s3
S3_BUCKET=ehpad-connect-documents
S3_REGION=eu-west-3
S3_ACCESS_KEY=votre_clé_d_accès
S3_SECRET_KEY=votre_clé_secrète

# Redis (cache et sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=debug
